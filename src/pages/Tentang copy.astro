<script>
  const tabs = document.querySelectorAll('.tab-btn');
  const contents = document.querySelectorAll('.tab-content');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Hapus kelas aktif dari semua tombol
      tabs.forEach(t => t.classList.replace('bg-blue-600','bg-gray-100'));
      tabs.forEach(t => t.classList.replace('text-white','text-gray-700'));

      // Sembunyikan semua konten
      contents.forEach(c => c.classList.add('hidden'));
      contents.forEach(c => c.classList.remove('block'));

      // Aktifkan tombol yang diklik
      tab.classList.replace('bg-gray-100','bg-blue-600');
      tab.classList.replace('text-gray-700','text-white');

      // Tampilkan konten sesuai data-tab
      const target = document.getElementById(tab.dataset.tab);
      target.classList.remove('hidden');
      target.classList.add('block');
    });
  });
</script>
<!-- JS Accordion -->
<script>
document.querySelectorAll('.accordion-button').forEach(button => {
    button.addEventListener('click', () => {
        const target = document.getElementById(button.dataset.target);
        const icon = button.querySelector('i.fas.fa-chevron-down');
        
        if(target.classList.contains('hidden')){
            // Close all others
            document.querySelectorAll('.accordion-content').forEach(content => content.classList.add('hidden'));
            document.querySelectorAll('.accordion-button i.fas.fa-chevron-down').forEach(i => i.classList.remove('rotate-180'));

            target.classList.remove('hidden');
            icon.classList.add('rotate-180');
        } else {
            target.classList.add('hidden');
            icon.classList.remove('rotate-180');
        }
    });
});

</script>
