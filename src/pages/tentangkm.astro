    <!-- JavaScript untuk interaksi -->
    <script>
        // Update tahun di footer
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        
        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
            
            // Tambahkan animasi slide down/up
            if (!mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.add('animate-slide-up');
            }
        });
        
        // Tab Navigation Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const tabButtons = document.querySelectorAll('.tab-btn');
            const tabContents = document.querySelectorAll('.tab-content');
            
            // Show first tab by default
            if (tabContents.length > 0) {
                tabContents.forEach((content, index) => {
                    if (index === 0) {
                        content.classList.remove('hidden');
                        content.classList.add('block');
                        content.classList.add('animate-blur-in');
                    } else {
                        content.classList.add('hidden');
                        content.classList.remove('block');
                    }
                });
            }
            
            // Add click event to tab buttons
            tabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    
                    // Update active button styling
                    tabButtons.forEach(btn => {
                        btn.classList.remove('bg-blue-600', 'text-white');
                        btn.classList.add('bg-gray-100', 'hover:bg-blue-50', 'text-gray-700');
                    });
                    
                    this.classList.remove('bg-gray-100', 'hover:bg-blue-50', 'text-gray-700');
                    this.classList.add('bg-blue-600', 'text-white');
                    
                    // Show selected tab content dengan animasi
                    tabContents.forEach(content => {
                        content.classList.add('hidden');
                        content.classList.remove('block', 'animate-blur-in');
                    });
                    
                    const selectedTab = document.getElementById(tabId);
                    if (selectedTab) {
                        selectedTab.classList.remove('hidden');
                        selectedTab.classList.add('block');
                        // Delay sedikit untuk trigger animation
                        setTimeout(() => {
                            selectedTab.classList.add('animate-blur-in');
                        }, 10);
                    } else {
                        // Jika tab tidak ditemukan, tampilkan default
                        const defaultTab = document.getElementById('default-tab');
                        defaultTab.classList.remove('hidden');
                        defaultTab.classList.add('block');
                        setTimeout(() => {
                            defaultTab.classList.add('animate-blur-in');
                        }, 10);
                    }
                });
            });
            
            // FAQ Accordion Functionality
            const accordionButtons = document.querySelectorAll('.accordion-button');
            
            accordionButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target');
                    const targetContent = document.getElementById(targetId);
                    const icon = this.querySelector('i.fa-chevron-down');
                    
                    // Tutup semua accordion lainnya
                    accordionButtons.forEach(btn => {
                        if (btn !== this) {
                            const otherTargetId = btn.getAttribute('data-target');
                            const otherContent = document.getElementById(otherTargetId);
                            const otherIcon = btn.querySelector('i.fa-chevron-down');
                            
                            if (otherContent && !otherContent.classList.contains('hidden')) {
                                otherContent.classList.add('hidden');
                                otherIcon.style.transform = 'rotate(0deg)';
                            }
                        }
                    });
                    
                    // Toggle content visibility dengan animasi
                    if (targetContent.classList.contains('hidden')) {
                        targetContent.classList.remove('hidden');
                        targetContent.classList.add('animate-fold-unfold');
                        icon.style.transform = 'rotate(180deg)';
                        
                        // Hapus class animasi setelah selesai
                        setTimeout(() => {
                            targetContent.classList.remove('animate-fold-unfold');
                        }, 600);
                    } else {
                        targetContent.classList.add('hidden');
                        icon.style.transform = 'rotate(0deg)';
                    }
                });
            });
            
            // Scroll animations
            function animateOnScroll() {
                const elements = document.querySelectorAll('.animate-fade-up, .animate-scale-in, .animate-slide-in-left, .animate-slide-in-right');
                
                elements.forEach(element => {
                    const elementPosition = element.getBoundingClientRect().top;
                    const screenPosition = window.innerHeight / 1.2;
                    
                    if (elementPosition < screenPosition) {
                        element.classList.add('animate__animated');
                        if (element.classList.contains('animate-fade-up')) {
                            element.style.animationPlayState = 'running';
                        }
                    }
                });
            }
            
            // Run animations on scroll
            window.addEventListener('scroll', animateOnScroll);
            window.addEventListener('load', () => {
                animateOnScroll();
                // Trigger initial animations
                setTimeout(() => {
                    document.querySelectorAll('.stagger-children > *').forEach((child, index) => {
                        child.style.animationDelay = `${index * 0.1}s`;
                        child.style.animationPlayState = 'running';
                    });
                }, 300);
            });
            
            // Inisialisasi slideshow
            initSlideshow();
            
            // Tambahkan animasi pada load
            document.body.classList.add('loaded');
            
            // Mobile dropdown functionality
            const mobileDropdownBtns = document.querySelectorAll('.mobile-dropdown-btn');
            mobileDropdownBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const content = this.nextElementSibling;
                    const icon = this.querySelector('i');
                    
                    if (content.classList.contains('hidden')) {
                        content.classList.remove('hidden');
                        icon.style.transform = 'rotate(180deg)';
                    } else {
                        content.classList.add('hidden');
                        icon.style.transform = 'rotate(0deg)';
                    }
                });
            });
        });

        // Fungsi universal untuk zoom gambar
        function openImageZoom(imageSrc, title = '') {
            const modal = document.getElementById('universal-image-modal');
            const zoomedImg = document.getElementById('universal-zoomed-image');
            const imageTitle = document.getElementById('image-title');
            
            // Set gambar dan judul
            zoomedImg.src = imageSrc;
            zoomedImg.alt = title + ' - Zoom View';
            imageTitle.textContent = title;
            
            // Tampilkan modal dengan animasi
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden';
            
            // Tambahkan animasi
            setTimeout(() => {
                modal.classList.add('animate-blur-in');
            }, 10);
        }

        // Fungsi untuk menutup zoom
        function closeImageZoom() {
            const modal = document.getElementById('universal-image-modal');
            modal.classList.remove('animate-blur-in', 'flex');
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Tutup modal ketika klik di luar gambar
        document.getElementById('universal-image-modal').addEventListener('click', function(e) {
            if (e.target.id === 'universal-image-modal') {
                closeImageZoom();
            }
        });

        // Tutup dengan tombol ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeImageZoom();
            }
        });

        // VARIABEL DAN FUNGSI SLIDESHOW
        let slideIntervalId;
        const slideInterval = 7000;
        let currentSlide = 0;

        // Fungsi untuk menampilkan slide berdasarkan index
        function showSlideByIndex(index) {
            const slides = document.querySelectorAll('.main-slide');
            const dots = document.querySelectorAll('.slide-dot');
            
            if (index < 0 || index >= slides.length) return;
            
            // Animasi fade out untuk slide saat ini
            slides.forEach(slide => {
                slide.style.transition = 'opacity 0.7s cubic-bezier(0.4, 0, 0.2, 1)';
                slide.style.opacity = '0';
                slide.style.zIndex = '1';
            });
            
            // Animasi fade in untuk slide baru
            slides[index].style.transition = 'opacity 0.7s cubic-bezier(0.4, 0, 0.2, 1)';
            slides[index].style.opacity = '1';
            slides[index].style.zIndex = '2';
            
            // Update dot aktif dengan animasi
            dots.forEach(dot => {
                dot.classList.remove('bg-white');
                dot.classList.add('bg-white/50');
                dot.classList.remove('scale-125');
            });
            if (dots[index]) {
                dots[index].classList.remove('bg-white/50');
                dots[index].classList.add('bg-white');
                dots[index].classList.add('scale-125');
            }
            
            currentSlide = index;
            
            // Reset interval
            clearInterval(slideIntervalId);
            slideIntervalId = setInterval(nextSlide, slideInterval);
            
            // Tambahkan efek visual pada gambar kecil yang diklik
            const smallImages = document.querySelectorAll('[data-slide-index]');
            smallImages.forEach(img => {
                const parentDiv = img.closest('div');
                const imgIndex = parseInt(img.getAttribute('data-slide-index'));
                if (!isNaN(imgIndex) && imgIndex === index) {
                    // Tambahkan efek highlight dengan animasi
                    parentDiv.classList.add('ring-4', 'ring-yellow-400', 'ring-offset-2', 'scale-110');
                    parentDiv.classList.add('animate-jelly');
                    
                    // Kembalikan ke normal setelah 1 detik
                    setTimeout(() => {
                        parentDiv.classList.remove('ring-4', 'ring-yellow-400', 'ring-offset-2', 'scale-110', 'animate-jelly');
                    }, 1000);
                } else {
                    parentDiv.classList.remove('ring-4', 'ring-yellow-400', 'ring-offset-2', 'scale-110', 'animate-jelly');
                }
            });
        }

        // Fungsi untuk slide berikutnya
        function nextSlide() {
            const slides = document.querySelectorAll('.main-slide');
            let nextIndex = currentSlide + 1;
            if (nextIndex >= slides.length) {
                nextIndex = 0;
            }
            showSlideByIndex(nextIndex);
        }

        // Fungsi untuk inisialisasi slideshow
        function initSlideshow() {
            const slides = document.querySelectorAll('.main-slide');
            const dots = document.querySelectorAll('.slide-dot');
            
            if (slides.length === 0) return;
            
            // Tampilkan slide pertama dengan animasi
            setTimeout(() => {
                showSlideByIndex(0);
            }, 500);
            
            // Tambahkan event listener untuk dots
            dots.forEach(dot => {
                dot.addEventListener('click', function() {
                    const index = parseInt(this.getAttribute('data-index'));
                    if (!isNaN(index)) {
                        showSlideByIndex(index);
                    }
                });
            });
            
            // Mulai slideshow otomatis
            slideIntervalId = setInterval(nextSlide, slideInterval);
            
            // Pause slideshow saat hover
            const slideshowContainer = document.getElementById('main-slideshow');
            if (slideshowContainer) {
                slideshowContainer.addEventListener('mouseenter', function() {
                    clearInterval(slideIntervalId);
                });
                
                slideshowContainer.addEventListener('mouseleave', function() {
                    slideIntervalId = setInterval(nextSlide, slideInterval);
                });
            }
        }

        // Artikel Nested Dropdown (Desktop)
        const artikelWrapper = document.querySelector('.artikel-wrapper');
        const artikelContent = document.querySelector('.artikel-content');
        const artikelChevron = document.querySelector('.artikel-chevron');

        if (artikelWrapper && artikelContent) {
            artikelWrapper.addEventListener('mouseenter', () => {
                artikelContent.style.maxHeight = '200px';
                artikelContent.style.opacity = '1';
                if (artikelChevron) {
                    artikelChevron.style.transform = 'rotate(180deg)';
                }
            });

            artikelWrapper.addEventListener('mouseleave', () => {
                artikelContent.style.maxHeight = '0px';
                artikelContent.style.opacity = '0';
                if (artikelChevron) {
                    artikelChevron.style.transform = 'rotate(0deg)';
                }
            });
        }

        // Smooth scroll untuk anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                
                if (href !== '#' && href.startsWith('#')) {
                    e.preventDefault();
                    const targetId = href.substring(1);
                    const targetElement = document.getElementById(targetId);
                    
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });

        // Tambahkan efek ripple pada semua tombol dengan class ripple
        document.querySelectorAll('.ripple').forEach(button => {
            button.addEventListener('click', function(e) {
                const x = e.clientX - e.target.getBoundingClientRect().left;
                const y = e.clientY - e.target.getBoundingClientRect().top;
                
                const ripple = document.createElement('span');
                ripple.style.left = `${x}px`;
                ripple.style.top = `${y}px`;
                ripple.classList.add('ripple-effect');
                
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });

        // Tambahkan style untuk ripple effect
        const style = document.createElement('style');
        style.textContent = `
            .ripple-effect {
                position: absolute;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.6);
                transform: scale(0);
                animation: ripple 0.6s linear;
                pointer-events: none;
            }
            
            @keyframes ripple {
                to {
                    transform: scale(4);
                    opacity: 0;
                }
            }
            
            .ripple {
                position: relative;
                overflow: hidden;
            }
        `;
        document.head.appendChild(style);
    </script>
