---
import MainLayout from "../layouts/MainLayout.astro";

/* ================= API ================= */
const API_BERITA = "http://parkir.dpmptsp-surabaya.my.id/api/v1/posts";
const IMAGE_BASE = "https://dpm-ptsp.surabaya.go.id/fileberita/";

let berita = [];

try {
  const res = await fetch(API_BERITA);
  const json = await res.json();
  berita = json.data?.slice(0, 6) || [];
} catch (e) {
  console.error("Gagal load berita", e);
}
---

<MainLayout title="DPMPTSP Kota Surabaya">

  <!-- ================= HERO ================= -->
<section class="py-16 bg-gradient-to-b from-gray-50 to-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-blue-800 mb-4">Mengapa Berinvestasi di Surabaya?</h2>
                <p class="text-gray-600 max-w-2xl mx-auto">Kota Surabaya menawarkan berbagai keunggulan sebagai
                    destinasi investasi terbaik di Indonesia.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Item 1 -->
                <div class="bg-white rounded-2xl p-6 shadow-custom card-hover">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-chart-line text-blue-600 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-blue-800 mb-4">Iklim Investasi yang Kondusif</h3>
                    <p class="text-gray-700 mb-6">Pembangunan di Surabaya tumbuh sangat cepat dengan dukungan kebijakan yang pro-investasi.</p>
                    <button onclick="viewPDF('dokumen/IKLIM_INVESTASI.pdf', 'Iklim Investasi yang Kondusif')" class="text-blue-600 font-semibold inline-flex items-center hover:text-blue-800 transition-colors">
                        Pelajari Lebih Lanjut <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>

                <!-- Item 2 -->
                <div class="bg-white rounded-2xl p-6 shadow-custom card-hover">
                    <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-city text-purple-500 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-blue-800 mb-4">Kota Metropolitan Terbesar Kedua</h3>
                    <p class="text-gray-700 mb-6">Sebagai kota metropolitan terbesar kedua di Indonesia, Surabaya menjadi pusat ekonomi regional.</p>
                    <button onclick="viewPDF('dokumen/KOTA_TERBESAR.pdf', 'Kota Metropolitan Terbesar Kedua')" class="text-blue-600 font-semibold inline-flex items-center hover:text-blue-800 transition-colors">
                        Pelajari Lebih Lanjut <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>

                <!-- Item 3 -->
                <div class="bg-white rounded-2xl p-6 shadow-custom card-hover">
                    <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-ship text-teal-500 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-blue-800 mb-4">Bandara &amp; Pelabuhan Internasional</h3>
                    <p class="text-gray-700 mb-6">Dilengkapi dengan bandara dan pelabuhan berstandar internasional untuk mendukung logistik.</p>
                   <button onclick="viewPDF('dokumen/BANDARA_PELABUHAN.pdf', 'Bandara &amp; Pelabuhan Internasional')" class="text-blue-600 font-semibold inline-flex items-center hover:text-blue-800 transition-colors">
                        Pelajari Lebih Lanjut <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>

                <div class="bg-white rounded-2xl p-6 shadow-custom card-hover">
                    <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-hospital text-red-500 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-blue-800 mb-4">Fasilitas Kesehatan</h3>
                    <p class="text-gray-700 mb-6">Dilengkapi dengan bandara dan pelabuhan berstandar internasional untuk mendukung logistik.</p>
                   <button onclick="viewPDF('dokumen/FASILITAS_KESEHATAN.pdf', 'Fasilitas Kesehatan')" class="text-blue-600 font-semibold inline-flex items-center hover:text-blue-800 transition-colors">
                        Pelajari Lebih Lanjut <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>


                <div class="bg-white rounded-2xl p-6 shadow-custom card-hover">
                    <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-map-marked-alt text-orange-500 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-blue-800 mb-4">Fasilitas Umum</h3>
                    <p class="text-gray-700 mb-6">Dilengkapi dengan bandara dan pelabuhan berstandar internasional untuk mendukung logistik.</p>
                   <button onclick="viewPDF('dokumen/FASILITAS_UMUM.pdf', 'Fasilitas Umum')" class="text-blue-600 font-semibold inline-flex items-center hover:text-blue-800 transition-colors">
                        Pelajari Lebih Lanjut <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>


                <div class="bg-white rounded-2xl p-6 shadow-custom card-hover">
                    <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-school text-yellow-500 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-blue-800 mb-4">Fasilitas Pendidikan</h3>
                    <p class="text-gray-700 mb-6">Dilengkapi dengan bandara dan pelabuhan berstandar internasional untuk mendukung logistik.</p>
                   <button onclick="viewPDF('dokumen/FASILITAS_PENDIDIKAN.pdf', 'Fasilitas Pendidikan')" class="text-blue-600 font-semibold inline-flex items-center hover:text-blue-800 transition-colors">
                        Pelajari Lebih Lanjut <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>
            </div>
            <!-- Modal PDF Viewer -->
            <div id="pdfViewerContainer" class="hidden mt-12">
                <div class="bg-white rounded-2xl shadow-custom p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h4 id="pdfTitle" class="text-lg font-bold text-blue-800">
                            Dokumen
                        </h4>

                        <div class="flex gap-2">
                            <a id="downloadPdf" href="#" target="_blank" download="" class="inline-flex items-center bg-yellow-400 text-blue-800 font-medium px-4 py-2 rounded-lg hover:bg-yellow-300 transition">
                                <i class="fas fa-download mr-2"></i> Download
                            </a>

                            <button id="closePdf" class="w-10 h-10 flex items-center justify-center rounded-full bg-red-100 text-red-600 hover:bg-red-200 transition">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>

                    <div class="pdf-container">
                        <object id="pdfViewer" type="application/pdf" width="100%" height="780px" class="rounded-lg">
                            <p class="text-center p-8 text-gray-600">
                                Browser tidak mendukung PDF preview.
                            </p>
                        </object>
                    </div>

                </div>
            </div>
        </div>
    </section>

  <!-- ================= KEUNGGULAN ================= -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">

        <div class="bg-white p-6 rounded-xl shadow">
          <i class="fas fa-chart-line text-3xl text-blue-600 mb-4"></i>
          <h3 class="font-bold text-lg mb-2">Iklim Investasi</h3>
          <p class="text-gray-600 text-sm">
            Pertumbuhan ekonomi stabil dan berkelanjutan.
          </p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow">
          <i class="fas fa-city text-3xl text-blue-600 mb-4"></i>
          <h3 class="font-bold text-lg mb-2">Kota Terbesar</h3>
          <p class="text-gray-600 text-sm">
            Pusat perdagangan dan industri di Indonesia Timur.
          </p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow">
          <i class="fas fa-ship text-3xl text-blue-600 mb-4"></i>
          <h3 class="font-bold text-lg mb-2">Pelabuhan & Bandara</h3>
          <p class="text-gray-600 text-sm">
            Akses logistik nasional dan internasional.
          </p>
        </div>

      </div>
    </div>
  </section>

  <!-- ================= PETA INVESTASI ================= -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 grid md:grid-cols-2 gap-12 items-center">

      <img
        src="/images/peta-surabaya.png"
        alt="Peta Investasi Surabaya"
        class="rounded-xl shadow"
        loading="lazy"
      />

      <div>
        <h2 class="text-3xl font-bold text-blue-800 mb-4">
          Peta Potensi Investasi Surabaya
        </h2>
        <p class="text-gray-600 mb-6">
          Informasi wilayah unggulan dan sektor strategis di Kota Surabaya
          untuk mendukung keputusan investasi Anda.
        </p>

        <a
          href="/peta-investasi"
          class="inline-block bg-yellow-400 text-black px-6 py-3 rounded-lg font-semibold hover:bg-yellow-500"
        >
          Jelajahi Peta â†’
        </a>
      </div>

    </div>
  </section>

  <!-- ================= VIDEO ================= -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-blue-800 mb-10">
        Video Terupdate
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl shadow overflow-hidden">
          <iframe class="w-full h-56"
            src="https://www.youtube.com/embed/VIDEO_ID"
            allowfullscreen></iframe>
          <div class="p-4 font-semibold">Pesona Buaya 2024</div>
        </div>

        <div class="bg-white rounded-xl shadow overflow-hidden">
          <iframe class="w-full h-56"
            src="https://www.youtube.com/embed/VIDEO_ID"
            allowfullscreen></iframe>
          <div class="p-4 font-semibold">Surabaya Great Expo</div>
        </div>

        <div class="bg-white rounded-xl shadow overflow-hidden">
          <iframe class="w-full h-56"
            src="https://www.youtube.com/embed/VIDEO_ID"
            allowfullscreen></iframe>
          <div class="p-4 font-semibold">Ekonomi Kreatif</div>
        </div>
      </div>
    </div>
  </section>

  <!-- ================= BERITA API ================= -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">

      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-blue-800">
          Berita & Artikel Terupdate
        </h2>
        <p class="text-gray-600">
          Informasi resmi DPMPTSP Kota Surabaya
        </p>
      </div>

      {berita.length === 0 && (
        <p class="text-center text-gray-500">Berita belum tersedia</p>
      )}

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {berita.map((item) => (
          <article class="bg-blue-700 text-white rounded-xl p-6 shadow">
            <img
              src={`${IMAGE_BASE}${item.picture}`}
              alt={item.title} 
              class="absolute inset-0 w-full h-full object-cover hover:scale-105 transition-transform duration-500"
              style="object-position: center 30%;"
              loading="lazy"
            />
            <h3 class="font-bold text-lg mb-3 line-clamp-2">
              {item.title}
            </h3>
            <p class="text-sm line-clamp-3 mb-4">
              {item.content}
            </p>
            <a
              href={`/berita/${item.slug}`}
              class="inline-block bg-white text-blue-700 px-4 py-2 rounded font-semibold"
            >
              Baca Selengkapnya
            </a>
          </article>
        ))}
      </div>

    </div>
  </section>

</MainLayout>
