---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/global.css";
---

<MainLayout title="Dashboard Investasi Surabaya">

  <!-- ================= HERO ================= -->
  <section class="py-20 bg-gradient-to-r from-blue-800 to-blue-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Dashboard Investasi Kota Surabaya
      </h1>
      <p class="text-lg md:text-xl max-w-3xl mx-auto opacity-90">
        Informasi kinerja investasi, peta potensi, dan panduan perizinan
        untuk mendukung kemudahan berusaha di Kota Surabaya.
      </p>
    </div>
  </section>

  <!-- ================= APLIKASI ================= -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-blue-800 mb-4">
          Aplikasi Investasi
        </h2>
        <p class="text-gray-600">
          Akses aplikasi pendukung investasi secara terintegrasi
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl shadow p-8 text-center hover:shadow-xl transition">
          <i class="fas fa-chart-line text-4xl text-blue-700 mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">Realisasi Investasi</h3>
          <p class="text-gray-600">
            Data realisasi investasi berdasarkan sektor dan wilayah.
          </p>
        </div>

        <div class="bg-white rounded-2xl shadow p-8 text-center hover:shadow-xl transition">
          <i class="fas fa-map-marked-alt text-4xl text-blue-700 mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">Peta Potensi</h3>
          <p class="text-gray-600">
            Peta potensi unggulan investasi di Kota Surabaya.
          </p>
        </div>

        <div class="bg-white rounded-2xl shadow p-8 text-center hover:shadow-xl transition">
          <i class="fas fa-book-open text-4xl text-blue-700 mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">Panduan Investasi</h3>
          <p class="text-gray-600">
            Panduan dan regulasi perizinan berusaha.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ================= PETA ================= -->
  <section id="Peta" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-blue-800 mb-4">
          Peta Potensi Investasi
        </h2>
        <p class="text-gray-600">
          Visualisasi wilayah dan sektor unggulan investasi
        </p>
      </div>

      <div class="rounded-2xl overflow-hidden shadow-lg">
        <img
          src="/images/peta-investasi.jpg"
          alt="Peta Potensi Investasi Surabaya"
          loading="lazy"
          class="w-full h-auto"
        />
      </div>
    </div>
  </section>

  <!-- ================= KINERJA ================= -->
  <section id="Kinerja" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-blue-800 mb-4">
          Kinerja Investasi
        </h2>
        <p class="text-gray-600">
          Laporan kinerja investasi per triwulan
        </p>
      </div>

      <div class="max-w-xl mx-auto bg-white rounded-2xl shadow p-8">
        <label class="block mb-3 font-semibold text-gray-700">
          Pilih Laporan PDF
        </label>

        <select
          id="pdfSelect"
          class="w-full border rounded-lg p-3 mb-4"
        >
          <option value="">-- Pilih Dokumen --</option>
          <option value="Kinerja-Investasi-TWI-2023.pdf">
            Kinerja Investasi TW I 2023
          </option>
          <option value="Kinerja-Investasi-TWII-2023.pdf">
            Kinerja Investasi TW II 2023
          </option>
        </select>

        <iframe
          id="pdfViewer"
          class="w-full h-[500px] border rounded-lg hidden"
        ></iframe>

        <a
          id="pdfDownload"
          class="mt-4 inline-block bg-blue-700 text-white px-6 py-3 rounded-lg hidden"
          download
        >
          Download PDF
        </a>
      </div>
    </div>
  </section>

  <!-- ================= PANDUAN ================= -->
  <section id="Panduan" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-blue-800 mb-4">
          Panduan Investasi
        </h2>
        <p class="text-gray-600">
          Alur dan ketentuan perizinan usaha
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-gray-50 rounded-2xl p-8 shadow">
          <i class="fas fa-briefcase text-3xl text-blue-700 mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">
            Prosedur Perizinan
          </h3>
          <p class="text-gray-600">
            Informasi OSS, SSW, dan perizinan usaha lainnya.
          </p>
        </div>

        <div class="bg-gray-50 rounded-2xl p-8 shadow">
          <i class="fas fa-phone-alt text-3xl text-blue-700 mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">
            Layanan Konsultasi
          </h3>
          <p class="text-gray-600">
            Konsultasi langsung di MPP Siola dan SPP Kota Surabaya.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ================= SCRIPT ================= -->
  <script is:inline>
    const select = document.getElementById("pdfSelect");
    const viewer = document.getElementById("pdfViewer");
    const download = document.getElementById("pdfDownload");

    select.addEventListener("change", () => {
      if (!select.value) {
        viewer.classList.add("hidden");
        download.classList.add("hidden");
        return;
      }

      viewer.src = "/" + select.value;
      viewer.classList.remove("hidden");

      download.href = "/" + select.value;
      download.classList.remove("hidden");
    });
  </script>

</MainLayout>
