---
import MainLayout from "../layouts/MainLayout.astro";
import { db } from '../lib/db.js';
import { slugify } from "../utils/slugify";



// Inisialisasi variabel
let rows = [], peta = [], renstra = [], unggul = [], videos = [];

try {
  const [result] = await db.execute('SELECT * FROM post ORDER BY date desc LIMIT 10');
  rows = result;
} catch (e) { console.error(e); }

try {
  const [result] = await db.execute('SELECT * FROM peta_investasi LIMIT 1');
  peta = result;
} catch (e) { console.error(e); }

try {
  const [result] = await db.execute('SELECT * FROM renstra_investasi');
  renstra = result;
} catch (e) { console.error(e); }

try {
  const [result] = await db.execute('SELECT * FROM keunggulan ORDER BY tanggal ASC LIMIT 6');
  unggul = result;
} catch (e) { console.error(e); }

try {
  const [result] = await db.execute('SELECT * FROM videos ORDER BY tanggal DESC');
  videos = result;
} catch (e) { console.error(e); }
---
<MainLayout title="DPMPTSP Surabaya - Berita & Artikel">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-r from-blue-800 to-blue-900 py-16 text-center text-white">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Berita, Artikel & Video</h1>
    <p class="text-xl opacity-90 max-w-3xl mx-auto">Informasi terkini seputar kegiatan, perkembangan, dan artikel dari DPMPTSP Surabaya</p>
    <div class="mt-8 space-x-4">
      <a href="/" class="inline-flex items-center bg-yellow-400 text-blue-800 font-bold px-6 py-3 rounded-lg hover:bg-yellow-300 transition">
        <i class="fas fa-arrow-left mr-2"></i> Kembali ke Beranda
      </a>
      <a href="#berita-content" class="inline-flex items-center bg-white text-blue-600 font-bold px-6 py-3 rounded-lg hover:bg-gray-100 transition">
        <i class="fas fa-newspaper mr-2"></i> Lihat Berita Terbaru
      </a>
    </div>
  </section>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-12 grid grid-cols-1 lg:grid-cols-4 gap-8">
    
    <!-- Video List Sidebar -->
    <div class="lg:col-span-1 bg-white rounded-2xl shadow-custom p-6 sticky top-24 max-h-[750px] overflow-y-auto">
      <h2 class="text-xl font-bold mb-6 flex items-center"><i class="fas fa-play-circle text-blue-700 mr-2"></i>Video Terbaru</h2>
      {videos.map(video => (
        <div class="group cursor-pointer card-hover bg-gray-50 p-4 rounded-xl mb-4">
          <div class="flex gap-3">
            <div class="relative flex-shrink-0 w-24 h-16 rounded-lg overflow-hidden">
              <img src={video.thumbnail} alt={video.judul} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
              <div class="absolute inset-0 bg-black/40 flex items-center justify-center">
                <i class="fas fa-play text-white text-lg"></i>
              </div>
              <span class="absolute bottom-1 right-1 bg-black/80 text-white text-xs px-1 rounded">{video.durasi}</span>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-gray-900 group-hover:text-blue-700 line-clamp-2 text-sm">{video.judul}</h3>
              <p class="text-xs text-gray-500 mt-1"><i class="far fa-eye mr-1"></i>{video.views}</p>
              <p class="text-xs text-gray-500"><i class="far fa-clock mr-1"></i> {new Date(video.tanggal).toLocaleDateString("id-ID")}</p>
             
            </div>
          </div>
        </div>
      ))}
      <a href="#" class="block mt-6 text-center bg-blue-700 hover:bg-blue-800 text-white font-semibold py-3 px-4 rounded-lg transition card-hover">
        <i class="fas fa-play-circle mr-2"></i>Lihat Semua Video
      </a>
    </div>

    <!-- Berita Grid -->
<div id="berita-content" class="lg:col-span-3 grid grid-cols-1 md:grid-cols-2 gap-6">
  {rows.map(row => (
    <div key={row.slug} class="bg-white rounded-2xl shadow-custom overflow-hidden card-hover animate-fadeInUp">
      <a href={`/media/${slugify(row.judul)}`} class="block h-full">



        <div class="flex flex-col h-full">
          <div class="relative h-64 overflow-hidden">
            <img
  src={`https://dpm-ptsp.surabaya.go.id/fileberita/${row.picture}`}
  alt={row.title}
  class="absolute inset-0 w-full h-full object-cover hover:scale-105 transition-transform duration-500"
/>

          </div>
          <div class="p-6 flex-grow">
            <h3 class="text-lg font-bold text-blue-800 mb-3 line-clamp-2">{row.judul}</h3>
            <p class="text-gray-600 text-sm mb-4 line-clamp-3">{row.content}</p>
            <div class="flex items-center justify-between pt-4 border-t border-gray-100 mt-auto">
              <div class="text-sm text-gray-500">
                <i class="far fa-calendar-alt mr-1"></i>{new Date(row.date).toLocaleDateString("id-ID")}
              </div>
              <span class="text-blue-600 font-semibold text-sm hover:text-blue-800 flex items-center">
                Baca Selengkapnya <i class="fas fa-arrow-right ml-1 text-xs"></i>
              </span>
            </div>
          </div>
        </div>
      </a>
    </div>
  ))}
</div>



  </div>
</MainLayout>
