---
import MainLayout from "../layouts/MainLayout.astro";

const API_BASE = "https://parkir.dpmptsp-surabaya.my.id";
const FILE_BASE = "https://dpm-ptsp.surabaya.go.id/fileberita";

let ikmList = [];

try {
  const res = await fetch(`${API_BASE}/api/v1/about-me/ikm`);
  const json = await res.json();

  // INI YANG BENAR
  ikmList = json?.data?.data || [];
} catch (e) {
  console.error("IKM ERROR", e);
}
---

<MainLayout title="Tentang Kami">

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">

    <h1 class="text-3xl font-bold text-blue-800 mb-10 text-center">
      Indeks Kepuasan Masyarakat
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {ikmList.map((item) => (
        <div class="bg-white rounded-xl shadow overflow-hidden">
          <img
            src={`${FILE_BASE}/${item.file}`}
            alt={item.title}
            class="w-full h-64 object-cover"
            loading="lazy"
          />
          <div class="p-4 text-center">
            <h3 class="font-semibold text-gray-700">
              {item.title}
            </h3>
            <p class="text-xs text-gray-500 mt-1">
              {new Date(item.created_at).toLocaleDateString("id-ID")}
            </p>
          </div>
        </div>
      ))}
    </div>

    {ikmList.length === 0 && (
      <p class="text-center text-gray-500 mt-10">
        Data IKM tidak tersedia
      </p>
    )}

  </div>
</section>

</MainLayout>
