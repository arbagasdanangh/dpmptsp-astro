---
import MainLayout from "../layouts/MainLayout.astro";

/* ================= BASE URL ================= */
const BASE_URL = "https://parkir.dpmptsp-surabaya.my.id";

/* ================= FETCH API ================= */
const res = await fetch(`${BASE_URL}/api/v1/about-me`);

if (!res.ok) {
  throw new Error("Gagal mengambil data Tentang");
}

const result = await res.json();

/*
  Response:
  {
    status: "success",
    data: {
      budaya: "...",
      ikm: "...",
      visi-misi: "...",
      ...
    }
  }
*/
const aboutData = result?.data || {};
---

<MainLayout title="Tentang Organisasi">
  <main class="min-h-screen bg-gray-50">

    <!-- HERO -->
    <section class="bg-blue-800 text-white py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold mb-4">
          Tentang Organisasi
        </h1>
        <p class="text-blue-100 max-w-2xl mx-auto">
          Informasi resmi terkait profil dan layanan DPMPTSP Kota Surabaya
        </p>
      </div>
    </section>

    <!-- LIST DATA -->
    <section class="container mx-auto px-4 py-16">
      <div class="bg-white rounded-2xl shadow p-8 max-w-4xl mx-auto">

        <h2 class="text-2xl font-bold text-blue-800 mb-6">
          Informasi Organisasi
        </h2>

        <ul class="space-y-4">
          {Object.entries(aboutData).map(([slug, title]) => (
            <li class="flex items-center gap-4 border-b pb-3 last:border-none">
              <span class="w-2 h-2 bg-blue-700 rounded-full"></span>

              <a
                href={`/about/${slug}`}
                class="text-gray-800 font-medium hover:text-blue-700 transition"
              >
                {title}
              </a>
            </li>
          ))}
        </ul>

      </div>
    </section>

  </main>
</MainLayout>
