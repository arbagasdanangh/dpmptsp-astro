---
import MainLayout from "../layouts/MainLayout.astro";
import { slugify } from "../utils/slugify";

/* ======================
   DATA STATIS ARTIKEL
   ====================== */
const articles = [
  {
    title: "Pelaporan LKPM TW IV dan Semester II Tahun 2025 Dibuka",
    date: "5 Januari 2026",
    image: "https://dpm-ptsp.surabaya.go.id/fileberita/lkpm-tw4-2025-2026-01-05(BERITA).jpeg",
    excerpt:
      "Pelaporan LKPM TW IV dan Semester II Tahun 2025 Dibuka, Pelaku Usaha Wajib Lapor 1â€“10 Januari 2026"
  },
  {
    title: "DPMPTSP Kota Surabaya Berikan Apresiasi Pegawai Terbaik Tahun 2025",
    date: "5 Januari 2026",
    image: "https://dpm-ptsp.surabaya.go.id/fileberita/apresiasi-pegawai-terbaik-2025-2026-01-05(BERITA).jpeg",
    excerpt:
      "DPMPTSP Kota Surabaya Berikan Apresiasi Pegawai Terbaik Tahun 2025"
  },
  {
    title:
      "DPMPTSP Kota Surabaya Terima Kunjungan Kementerian Investasi dan Hilirisasi/BKPM RI",
    date: "16 Desember 2025",
    image: "https://dpm-ptsp.surabaya.go.id/fileberita/umkm-bkpm-2025-2025-12-16(BERITA).jpeg",
    excerpt:
      "Fasilitasi pelaku UMKM oleh Kementerian Investasi dan Hilirisasi/BKPM RI"
  }
];
---

<MainLayout title="Berita & Artikel | DPMPTSP Kota Surabaya">

  <!-- HERO -->
  <section class="relative overflow-hidden bg-gradient-to-r from-blue-800 to-blue-900 py-16 text-center text-white">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">
      Berita & Artikel
    </h1>
    <p class="text-xl opacity-90 max-w-3xl mx-auto">
      Informasi terkini seputar kegiatan dan pelayanan DPMPTSP Kota Surabaya
    </p>
  </section>

  <!-- CONTENT -->
  <section class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

      {articles.map((item) => (
        <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:-translate-y-1 transition">
          <a href={`/artikel/${slugify(item.title)}`}>
            <div class="relative h-56 overflow-hidden">
              <img
                src={item.image}
                alt={item.title}
                class="absolute inset-0 w-full h-full object-cover hover:scale-105 transition duration-500"
              />
            </div>

            <div class="p-6">
              <h3 class="text-lg font-bold text-blue-800 mb-3 line-clamp-2">
                {item.title}
              </h3>

              <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                {item.excerpt}
              </p>

              <div class="flex items-center justify-between pt-4 border-t">
                <span class="text-sm text-gray-500">
                  <i class="far fa-calendar-alt mr-1"></i>
                  {item.date}
                </span>

                <span class="text-blue-600 font-semibold text-sm flex items-center">
                  Baca Selengkapnya
                  <i class="fas fa-arrow-right ml-1 text-xs"></i>
                </span>
              </div>
            </div>
          </a> 
        </article>
      ))}

    </div>
  </section>

</MainLayout>
