<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
  const btn = document.getElementById("btnMenu");
  const menu = document.getElementById("mobileMenu");

  btn?.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });

  //dipercaya
  const container = document.getElementById('scroll-container');
  const content = document.getElementById('scroll-content');
  const items = document.querySelectorAll('.scroll-item');
  
  // Duplicate content for seamless loop
  items.forEach(item => {
      const clone = item.cloneNode(true);
      content.appendChild(clone);
  });
            
  // Calculate total width
  const itemWidth = items[0]?.offsetWidth || 224; // w-56 = 224px
  const gap = 24; // gap-6 = 24px
  const totalItems = items.length;
  const totalWidth = (totalItems * 2) * (itemWidth + gap);
  
  // Set container width
  content.style.width = `${totalWidth}px`;
  
  // Animation variables
  let position = 0;
  const speed = 1; // pixels per frame
  let animationId;
  
  function animate() {
      // Move to left
      position -= speed;
      
      // Reset position when first set is completely out of view
      const firstSetWidth = totalItems * (itemWidth + gap);
      if (Math.abs(position) >= firstSetWidth) {
          position = 0;
      }
      
      content.style.transform = `translateX(${position}px)`;
      animationId = requestAnimationFrame(animate);
  }
  
  // Start animation
  animate();
  
  // Pause on hover
  container.addEventListener('mouseenter', () => {
      cancelAnimationFrame(animationId);
  });
  
  container.addEventListener('mouseleave', () => {
      animationId = requestAnimationFrame(animate);
  });
});
</script>

